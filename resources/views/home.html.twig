{% extends '_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div id="wrapper" class="wrapper" data-app-url="{{ url }}">
        <div class="middle-container">
            <div class="middle">
                <input id="input" class="input" type="text" placeholder="Ik haat alles!" autocomplete="off" autofocus>
                <br>
                <div class="image-wrapper" >
                    <img id="image" class="image" src="{{ url }}/ik%20haat%20alles!.jpg" alt="ik haat alles!">
                </div>
                <br>
                <div id="urlInputWrapper" class="url-input-wrapper">
                    <input id="urlInput" class="url-input" type="text" readonly="readonly" data-clipboard-target="#urlInput">
                    <div class="copied-to-clipboard-message">
                        Link gekopieÃ«rd naar klembord!
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="social">
        <a href="https://twitter.com/share" class="twitter-share-button" data-via="wouterds" data-hashtags="kabouterwesley" data-url="{{ url }}/">Tweet</a>
        <div class="fb-like" data-colorscheme="light" data-href="{{ url }}/" data-layout="button_count" data-action="like" data-show-faces="false" data-send="false"></div>
    </div>
{% endblock %}

{% block scripts_first %}
<script type="text/javascript" src="/static/js/vendor/jquery.min.js"></script>
<script type="text/javascript" src="/static/js/vendor/clipboard.min.js"></script>
{% endblock %}
