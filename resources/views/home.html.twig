{% extends '_base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div id="wrapper" class="wrapper" data-app-url="{{ url }}">
        <div class="middle-container">
            <div class="middle">
                <input id="input" type="text" placeholder="Ik haat alles!" autocomplete="off" autofocus>
                <br>
                <img id="image" src="{{ url }}/ik%20haat%20alles!.jpg" alt="ik haat alles!">
                <br>
                <input id="urlInput" class="url-input" type="text" readonly="readonly" data-clipboard-target="#urlInput">
            </div>
        </div>
    </div>

    <div class="social">
        <a href="https://twitter.com/share" class="twitter-share-button" data-size="large" data-via="kabouterisboos" data-hashtags="kabouterwesley" data-url="{{ url }}/">Tweet</a>
        <div class="fb-share-button" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u&amp;src=sdkpreparse" data-href="{{ url }}/">Share</a></div>
    </div>
{% endblock %}

{% block scripts_first %}
<script type="text/javascript" src="/static/js/vendor/jquery.min.js"></script>
<script type="text/javascript" src="/static/js/vendor/clipboard.min.js"></script>
{% endblock %}
